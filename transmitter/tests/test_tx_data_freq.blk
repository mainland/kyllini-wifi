#include <bits.blk>
#include "../parsePLCPHeader.blk"
#include "../scramble.blk"
#include "../encoding.blk"
#include "../interleaving.blk"
#include "../crc.blk"
#include "../modulating.blk"
#include "../map_ofdm.blk"


let h = HeaderInfo{coding=CR_34; modulation=M_16QAM; len=100; err=false};

fun comp scale() {
  repeat {
    (x:complex16)<-take;
    emit complex16{re=x.re/bpsk_mod_11a; im=x.im/bpsk_mod_11a};
  }
}

fun comp convert_to_bits() {
var ai : arr[1] int8;
var ab : arr[8] bit;

  repeat {
    x<-take;
    do{
      ai[0] := x;
      int8_to_bits(ab, ai);
    }
    emits ab;
  }
}

let len_without_crc = 100-4;

let comp main = read[int8] >>> convert_to_bits() >>>
  crc144(len_without_crc, true) >>> scrambler(default_scrmbl_st) >>> encode34() 
  >>> interleaver_m16qam() >>> modulate_16qam() >>> map_ofdm()
  >>> repeat{x<-takes (64*6); emits x[0, 64]}
  >>> write



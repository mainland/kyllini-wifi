#include "../receiver/decoding/DecodePLCP.blk"
#include "../receiver/decoding/Decode.blk"
#include "../transmitter/crc.blk"


fun comp detectSTS() {
  removeDC() >>> cca()
}

-- FreqCompensation does not work but it is nor crucial so we remove it for now
--       DataSymbol() >>> FreqCompensation(params) >>> FFT() >>> ChannelEqualization(params) >>> 


fun comp receiveBits() {
       seq { hdata <- DecodePLCP()
           ; Decode(hdata) >>> seq { (c : arr[4] bit) <- crc(hdata.len, false); check_crc(c) }
       }
}


fun comp receiver() {
      det<-detectSTS()
#ifndef FAST
     ; do{println "Detected at: ", det.noSamples, " (shift=", det.shift, ")"}
#endif
     -- receiver uses Sora port of cca to produce comparable performance measurements
     -- but this one does not maxCorr value, so we provide an appropriate one here to pass tests
     -- In real-world examples use cca_tufv instead of cca.
     ; params <- LTS(det.shift, 850906)
     ; DataSymbol(det.shift) >>> FFT() >>> ChannelEqualization(params)
       >>> PilotTrack()
       >>> GetData() 
       >>> receiveBits()
}

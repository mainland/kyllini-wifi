#pragma once 

#include "../../const.blk"
#include "../../transmitter/scramble.blk"
#include "../../transmitter/parsePLCPHeader.blk"
#include "DemapLimit.blk"
#include "DemapBPSK.blk"
#include "DeinterleaveBPSK.blk"
#include "ViterbiSig11a.blk"

fun comp DecodePLCP() {
  var hdata : arr[24] bit;
  seq{ DemapLimit(0) >>> DemapBPSK() >>> DeinterleaveBPSK() 
                     >>> ViterbiSig11a() 
                     >>> repeat{ (x:arr[24] bit) <- takes 24; do{hdata := x}}
     ; return parsePLCPHeader(hdata)
     }
}

